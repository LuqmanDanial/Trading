//@version=5
indicator("Fear and Greed Index", overlay=true)

// Define Fear and Greed Index levels
fearLevel = 20
greedLevel = 80

// Get Fear and Greed Index data (you can replace this with your own data source)
fearGreedIndex = request.security("INDEX:FNG", "D", close)

// Plot Fear and Greed Index line
plot(fearGreedIndex, title="Fear and Greed Index", color=color.blue)

// Plot horizontal lines for fear and greed levels
hline(fearLevel, title="Fear Level", color=color.red)
hline(greedLevel, title="Greed Level", color=color.green)

// Add labels based on Fear and Greed Index level
labelLevel = na
if fearGreedIndex < fearLevel
    labelLevel := "Fear"
else if fearGreedIndex > greedLevel
    labelLevel := "Greed"
plotchar(labelLevel, title="Fear/Greed Level", location=location.top, color=color.white, textcolor=color.black, transp=0)

